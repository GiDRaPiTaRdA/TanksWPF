<Window x:Class="Tanks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tanks"
        mc:Ignorable="d"
        Title="MainWindow" Height="658.975" Width="767">

    <Window.Resources>
        <ResourceDictionary>
            <System:String x:Key="pixelSize">10px</System:String>
            <System:String x:Key="pixelSpacing">2px</System:String>
        </ResourceDictionary>
    </Window.Resources>

    <StackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center">
        <Border BorderBrush="Black"
                BorderThickness="1"
                CornerRadius="5"
                Padding="5">
        <Grid Name="ParrentGrid"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">
        </Grid>
        </Border>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="130" Click="button_Click"/>
    </StackPanel>
</Window>
